<div class="ase-effects-layout">
    <div class="ase-effects-grid">
        {{#each effects}}
        {{> modules/advanced-sound-engine/templates/partials/effect-card.hbs effect=this }}
        {{/each}}
    </div>

    <!-- Footer / Presets bar could go here later -->
    <div class="ase-effects-footer">
        <div class="ase-presets-controls">
            <select id="ase-preset-select">
                <option value="">Load Preset...</option>
                {{#each presets}}
                <option value="{{this.id}}">{{this.name}}</option>
                {{/each}}
            </select>
            <button data-action="save-preset"><i class="fas fa-save"></i> Save Preset</button>
        </div>
    </div>
</div>